{
	"extends": [
		"next/core-web-vitals",
		"react-app"
	],
	"rules": {
		"react/jsx-first-prop-new-line": [
			2,
			"multiline"
		],
		"react/jsx-max-props-per-line": [
			2,
			{
				"maximum": 1,
				"when": "multiline"
			}
		],
		"react/jsx-indent-props": [
			0,
			2
		],
		"react/jsx-closing-bracket-location": [
			2,
			"tag-aligned"
		],
		"jsx-a11y/anchor-is-valid": 0,
		"no-mixed-spaces-and-tabs": 1,
		// "indent": [
		// 	1,
		// 	"tab",
		// 	{
		// 		"SwitchCase": 1
		// 	}
		// ],
		"quotes": [
			1,
			"backtick"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			1,
			"never"
		],
		"comma-dangle": [
			1,
			{
				"objects": "only-multiline"
			}
		],
		"comma-spacing": [
			1,
			{
				"before": false,
				"after": true
			}
		],
		"object-curly-spacing": [
			1,
			"always"
		],
		"space-in-parens": [
			1,
			"never"
		],
		"space-before-function-paren": [
			1,
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"prefer-const": 1,
		"space-before-blocks": 1,
		"space-infix-ops": 1,
		"no-trailing-spaces": 1,
		"keyword-spacing": 1,
		"no-multi-spaces": [
			1,
			{
				"exceptions": {
					"Property": false
				}
			}
		],
		"no-multiple-empty-lines": [
			1,
			{
				"max": 1
			}
		],
		"no-tabs": 0
	}
}